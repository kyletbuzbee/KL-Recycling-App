rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {

    // Service Requests: Only authenticated users can submit, admin can read
    match /serviceRequests/{requestId} {
      allow write: if request.auth != null &&
        request.auth.token.email_verified == true &&
        request.resource.data.keys().hasAll(['requestType', 'zipCode', 'createdAt']);
      allow read: if false; // Admin access through Firebase Admin SDK only
    }

    // ML Analysis Results: Only authenticated users can write, admin can read
    match /mlAnalysisResults/{analysisId} {
      allow write: if request.auth != null &&
        request.auth.token.email_verified == true;
      allow read: if false; // Admin access through Firebase Admin SDK only
    }

    // Business Analytics: Only authenticated users can write, admin can read
    match /businessAnalytics/{analyticsId} {
      allow write: if request.auth != null;
      allow read: if false; // Admin access through Firebase Admin SDK only
    }

    // Users collection: Users can read/write their own data, admin can read all
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if false; // Admin access through Firebase Admin SDK only
    }

    // Default deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
